#!/bin/zsh
# -*- mode: shell-script; -*-

rsync -av   ~/.xemacs/pkgrepos/mypkgs/planner-utils/.  ~/../paradise/Projects/lisp/pa/in.net.sharad.pa-backend-emacs-planner/emacs/lisp/planner-utils/.
rsync -av   ~/.xemacs/pkgrepos/mypkgs/pa-planner/.  ~/../paradise/Projects/lisp/pa/in.net.sharad.pa-backend-emacs-planner/emacs/lisp/pa-planner/.

mplayeroutput=/dev/null

if ! pgrep mplayer >& /dev/null ; then
    mpc stop
    rm -f /tmp/mplayer.fifo
    mkfifo /tmp/mplayer.fifo
    mplayer  -profile radio/fm -idle -slave -input file=/tmp/mplayer.fifo 1&> $mplayeroutput &!
    sleep 2s ;
    at now + 2 minutes <<'EOF'
    echo "load radio://6/capture" > /tmp/mplayer.fifo
    amixer -- sset Master 100%
EOF

fi
