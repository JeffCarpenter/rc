#!/usr/bin/env zsh

[ -r ~/.rsetup/pmhibernateon/run.d/${HOST//.*} ] &&
~/.rsetup/pmhibernateon/run.d/${HOST//.*}

if which $HOME/bin/ecryptfs-mount-private 2>&1 ; then

    if [  -e $PRIVATE_DIR ] && [ "x" != "x$DISPLAY" ] ; then
        timeout -k 10 7 ecryptfs-umount-private
    fi
fi

timeout -k 32 20 gksudo -gS ifdown eth0
ifconfig eth0
sleep 2s
print eth0 is down

# [ -r ~/.rsetup/ifdown/run ] &&
# ~/.rsetup/ifdown/run



