#!/bin/zsh

# emacsclient -n -f ~/.emacs.d/server/general "$@"
local debug=0


local prog=$(basename $0)
local alternative_editor
alternate_editors=( em zile mg jove sensible-editor vim joe )

local server_file="${HOME}/.emacs.d/server/general"
local lhost=$(hostname -s)


if [[ $prog = r*   ]]  ; then
    remoteedit=doit
else
    unset remoteedit
fi



if (( ${+debug} && $debug )) ; then
    print remoteedit: ${remoteedit}
    print DISPLAY: ${DISPLAY}
    print prog: ${prog}
fi

# local rhost=s@ubuntu-sharad
# local rproto=scpc
# local rserver_file="${HOME}/.emacs.d/server/general"
# local lhost=$(hostname -s)


typeset -A args

if (( ${+remoteedit})) ; then
    args[-f]=${remoteditsocfile}
else
    args[-f]=${server_file}
fi

# args[-f]=".emacs.d/server/general"

# if [[ $prog =~ .*n$ ]]  ; then
#     args[-n]=""
# fi

if [[ $prog = *n ]]  ; then
    args[-n]=""
fi


if [ $# -eq 0 ] ; then
    args[-c]=""
fi

foreach editor ( $alternate_editors )
do
if which $editor >& /dev/null ; then
    alted=$editor
    break
fi
done

if [[ $prog = *x* ]] ; then
    # args[-d]="$DISPLAY";;
    : ;
else
    args[-t]="";;
fi



foreach f ("$@" ) {
    [ -f $f ] && filegiven=
}

local -a files
if (( ${+remoteedit} )) ; then
    foreach f ($@) {
        files[$(expr $#files + 1)]=/${remoteeditproto}:${lhost}:$(readlink -m $f)
    }
else
    files=$@
fi

if (( ${+remoteedit} )) ; then
    (( ${+debug} && $debug )) && print eval ssh ${rhost} emacsclient ${(kv)args} ${filegiven--c} ${alted:+ -a $alted} ${files[@]}
    eval ssh ${remoteedit} emacsclient ${(kv)args} ${filegiven--c} ${alted:+ -a $alted} ${files[@]}
else
    if which emacs >& /dev/null && which emacsclient >& /dev/null ; then
        (( ${+debug} && $debug )) && echo eval emacsclient ${(kv)args} ${filegiven--c} ${alted:+ -a $alted} "${files[@]}"
        eval emacsclient ${(kv)args} ${filegiven--c} ${alted:+ -a $alted} "${files[@]}"
    else
        $alted "$@"
    fi
fi
